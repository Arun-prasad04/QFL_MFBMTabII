@model MFBMTABQFL.Models.LoginModel
 @{
    Layout = null;
}
@using (@Html.BeginForm("Login", "Home", FormMethod.Post, new { id = "LoginForm" }))
{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>DTA QM Portal - Login</title>
        <meta name="keywords" content="Audit Tool" />
        <meta name="description" content="Audit Tool" />
        <meta name="author" content="Daimler" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
        <meta http-equiv="X-UA-Compatible" content="IE=9; IE=7; IE=8; IE=EDGE" />
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <link href="~/Content/bootstrap.css" rel="stylesheet" />
        <link href="~/Content/fontawesome.css" rel="stylesheet" />
        <link href="~/Content/fontawesome-all.css" rel="stylesheet" />
        <link href="~/Content/bootstrap-select.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/login.css" rel="stylesheet" />
        <script type="text/javascript" src="~/Scripts/jquery-2.2.0.js"></script>
        <script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
        <script src="~/Plugins/DataAccessLayer.js" type="text/javascript"></script>
        <script src="~/Plugins/Login.js" type="text/javascript"></script>
        <script src="~/Plugins/BorderValidation.js" type="text/javascript"></script>
        <script src="~/Scripts/bootstrap-select.js" type="text/javascript"></script>
        <script src="~/Scripts/jquery.translate.js" type="text/javascript"></script>
        <script src="~/Scripts/jquery.jquery-password-generator-plugin.js" type="text/javascript"></script>
        <script src="~/Scripts/jquery.validationEngine-en.js" type="text/javascript"></script>
        <script src="~/Scripts/jquery.validationEngine.js" type="text/javascript"></script>
        <!--  HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>

          <script src="js/html5shiv.js"></script>
        <![endif]-->
        <script type="text/javascript">
            var dict = {
                "Daimler Trucks Asia": {
                    jp: "ダイムラー・トラック・アジア",
                    en: "Daimler Trucks Asia"
                },
                "Remember this Account": {
                    jp: "このアカウントを覚えている",
                    en: "Remember this Account"
                },
                "Quality Management": {
                    jp: "品質管理",
                    en: "Quality Management"
                },
                "Login": {
                    jp: "ログイン",
                    en: "Login"
                },
                "Forgot password": {
                    jp: "パスワードをお忘れですか",
                    en: "Forgot password"
                },
                "Email Id": {
                    jp: "電子メールID",
                    en: "Email Id"
                },
                "Submit": {
                    jp: "提出する",
                    en: "Submit"
                },
                "Cancel": {
                    jp: "キャンセル",
                    en: "Cancel"
                }
            }
            $(document).ready(function () {



                // var translator = $('body').translate({ lang: "en", t: dict });
                $('.Languagepicker').selectpicker();




                $('.Languagepicker').on('change', function () {
                    var selected = $(this).find("option:selected").val();
                    console.log(selected);
                    if (selected == "en") {
                        var translator = $('body').translate({ lang: "en", t: dict });
                    }
                    else {
                        var translator = $('body').translate({ lang: "jp", t: dict });
                    }
                });


            });









                $('#txtlanguage').val($(".Languagepicker").find("option:selected").val());

            function LoaderShow()
            {
                $('#dLoader').css('display', '');
            }
            function LoaderHide()
            {
                $('#dLoader').css('display', 'none');
            }
        </script>
    </head>
    <body>
        <div class="container-fluid text-center login">
            <div class="row content">
                <div class="col-lg-12">
                    <div class="col-xs-2 col-sm-4 wrapper">
                        <img src="~/Images/DTALOGO.png" class="logimgmain" />
                        <div class="headingbg otto">
                            <h1>
                                <span class="trn">Daimler Trucks Asia</span>
                                <br />
                                <span class="trn">Quality Management</span>
                            </h1>
                        </div>
                        <hr />
                        <div class="eblock">
                            <img src="~/Images/fusowhite.png" />
                            <img src="~/Images/fusologo.png" class="Fusoimgclass" />
                            <img src="~/Images/logo1.png" class="BBimgclass " />
                        </div>
                        <hr />
                        <!--   <h3 class="portalimage">
                            DTA QM Web Portal
                        </h3>-->
                        <div class="login-body logincontent">
                            @*<form class="lg-form" action="" method="post">*@
                            @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = "Loginform" }))
                            {

                                <div class="form-group user-name">
                                    <div class="row">
                                        <div class="col-sm-6 col-xs-12">
                                        </div>
                                    </div>
                                    <div class="input-group-full">
                                        @*  <input type="text" class="form-control " name="user" placeholder="Email" />*@
                                        @Html.TextBoxFor(N => N.username, new { @type = "email", @id = "username", @class = "form-control", @required = true, @placeholder = "Email" })
                                        <i class="fa fa-envelope"></i>
                                    </div>
                                </div>
                                <div class="form-group password">
                                    <label for="password" style="display: none">
                                        Password
                                    </label>
                                    <div class="input-group-full">
                                        @*<input type="password" class="form-control " name="password" placeholder="Password" />*@
                                        @Html.PasswordFor(N => N.password, new { @class = "form-control", @required = true, @value = ViewBag.password, @placeholder = "Password" })
                                        <i class="fa fa-lock"></i>
                                    </div>
                                </div>
                                <div class="form-group remember-password rpassword">
                                    @* <input type="checkbox" id="Checkbox2" name="" class="" />*@
                                    @Html.CheckBoxFor(N => N.rememberme, new { id = "rememberme" })
                                    @Html.TextBoxFor(N => N.language, new { id = "txtlanguage", @style = "display:none" })
                                    <label for="remember_this_account" class="">
                                        <span class="trn">Remember this Account</span>
                                    </label>
                                </div>
                                <h5 class=" forgot-password fpassword">
                                    <a class="" href="#" onclick="ReqForgotPassword()">
                                        <span class="trn">Forgot password</span>?
                                    </a>
                                </h5>
                                @*<div class="form-group submit text-center loginsize">
                                        <button type="submit" class="btn btn-success loginbtnwidth">
                                            Login
                                        </button>
                                    </div>*@
                                <div class="form-group submit loginsize">
                                    <div>
                                        <button type="submit" id="submitID" class="btn btn-success lgbtn" onclick="Login();">
                                            <span class="trn">Login</span>
                                        </button>
                                        <select id="Languagepickers" class="Languagepicker daimler_language_login" data-width="fit">
                                            <option value="en" data-content='<span class="flag-icon flag-icon-gb"></span>'></option>
                                            <option value="jp" data-content='<span class="flag-icon flag-icon-jp"></span>'></option>
                                        </select>
                                    </div>
                                </div>
                                <div class="LoginError">
                                    @ViewBag.ErrorMessage
                                </div>
                            }
                            @* </form>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script>
            function Login() {
                var Languagepicker = $('#Languagepickers').find(':selected').val();
               
                $("#txtlanguage").val(Languagepicker);
            }
        </script>
        <!--Forgot Password  Modal -->
        <form action="" id="ForgotPasswordForm">
            <div id="ForgotPassword" class="modal active" role="dialog" data-backdrop="static"
                 data-keyboard="false" style="display: none">
                <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content lmodcontcpwd">
                        <div class="modal-header lmodelheader">
                            <button type="button" id="btcloses" class="close" data-dismiss="modal" style="color: #FFFFFF;
                            display: none">
                                &times;
                            </button>
                            <label class="modal-title">
                                <span class="trn">Forgot password</span>
                            </label>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="opwd" class="opwd">
                                    <span class="trn">Email Id</span>:
                                </label>
                                <input id="txtEmailId" type="text" class="form-control input-sm forgotEmail" required />
                            </div>
                            <a style="display: none" class="btn btn-danger" href="#" id="RandomPassword" role="button">
                                $.passGen({'length' : 15, 'numeric' : true,'lowercase':true,'uppercase':true,'special':false})
                            </a>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-success btn-xs lfooter">
                                <span class="trn">Submit</span>
                            </button>
                            <button id="btcloses1" type="button" class="btn btn-xs rejectbtn" data-dismiss="modal">
                                <span class="trn">Cancel</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <!--Forgot Password  Modal -->
        <!--Dynamic Alert  Modal -->
        <div style="display: none;" id="dLoader">
            <div id="basic_preloader_overlay">
            </div>
            <div class="basic_lbLoading">
                <div class="cssload-rect1">
                </div>
                <div class="cssload-rect2">
                </div>
                <div class="cssload-rect3">
                </div>!
            </div>
        </div>
        <div class="modal fade" id="DynamicAlertModal" role="dialog">
            <div class="modal-dialog modal-xs">
                <div class="modal-content">
                    <div class="modal-header modalheaderbg">
                        <h4 class="modal-title" id="hTitle3"></h4>
                    </div>
                    <div class="modal-body">
                        <p id="">
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button id="dyOk" type="button" class="btn btn-success btn-xs btn-cancel btn-center"
                                data-dismiss="modal">
                            OK
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <!--Dynamic End of Alert modal -->


    </body>
</html>
}