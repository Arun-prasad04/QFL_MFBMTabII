    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>DTA QM Portal- Homepage </title>
    <meta name="keywords" content="Audit Tool" />
    <meta name="description" content="Audit Tool" />
    <meta name="author" content="Daimler" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta http-equiv="X-UA-Compatible" content="IE=9; IE=7; IE=8; IE=EDGE" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/fontawesome.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-select.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/homepagetheme.css" rel="stylesheet" />
    <link href="~/Content/fontawesome-all.css" rel="stylesheet" />
    <link href="~/Content/homepage.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Scripts/jquery-2.2.0.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap-select.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.translate.js" type="text/javascript"></script>
    @*<script src="~/Scripts/jquery.validate.js" type="text/javascript"></script>*@
    <script src="~/Scripts/jquery.validationEngine-en.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validationEngine.js" type="text/javascript"></script>
    <script src="~/Plugins/DataAccessLayer.js" type="text/javascript"></script>
    <script src="~/Plugins/ChangePassword.js" type="text/javascript"></script>
    <script src="~/Plugins/BorderValidation.js" type="text/javascript"></script>
    <script>

        $(document).ready(function () {

            var dict = {
                "Change Password": {
                    jp: "パスワードを変更する",
                    en: "Change Password"
                },
                "Old Password": {
                    jp: "以前のパスワード",
                    en: "Old Password"
                },
                "New Password": {
                    jp: "新しいパスワード",
                    en: "New Password"
                },
                "Confirm Password": {
                    jp: "パスワードを認証する",
                    en: "Confirm Password"
                },
                "Concern Resolution": {
                    jp: "懸念の解決",
                    en: "Concern Resolution"
                },
                "Product Audit": {
                    jp: "製品監査",
                    en: "Product Audit"
                },
                "Automated QFL": {
                    jp: "QFLの自動化",
                    en: "Automated QFL"
                },
                "Online Task Tracker": {
                    jp: "オンラインタスクトラッカー",
                    en: "Online Task Tracker"
                },
                "Administrator": {
                    jp: "管理者",
                    en: "Administrator"
                },
                "Cancel": {
                    jp: "キャンセル",
                    en: "Cancel"
                }
            }

            var translator = $('body').translate({ lang: '@ViewBag.language', t: dict });
            $('.Languagepicker').selectpicker();
            $('.Languagepicker').selectpicker('val', '@ViewBag.language');
        });

    </script>
</head>
<body>
    <!--Change Password  Modal -->
    <input type="hidden" id="hdnApi" value="@ViewBag.Api" />
    <input type="hidden" id="hdnEmailId" value="@ViewBag.EmailId" />
    <form action="" id="ChangePasswordForm">
        <div id="ChangePassword" class="modal active" role="dialog" data-backdrop="static"
             data-keyboard="false" style="display: none">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content lmodcontcpwd">
                    <div class="modal-header lmodelheader">
                        <button type="button" id="btcloses" class="close" data-dismiss="modal" style="color: #FFFFFF;
                        display: none">
                            &times;
                        </button>
                        <label class="modal-title">
                            <span class="trn">Change Password</span>
                        </label>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="opwd" class="opwd">
                                <span class="trn">Old Password</span>
                            </label>
                            <input id="txtoldpwd" type="password" class="form-control input-sm validate[required] text-input pwdinput" />
                        </div>
                        <div class="form-group">
                            <label for="npwd" class="npwd">
                                <span class="trn">New Password</span>
                            </label>
                            <input id="txtnewpwd" onkeyup="TxtValid()" type="password" name="password" class="form-control input-sm  validate[required] text-input pwdinput" />
                            <div id="password-strength-status">
                            </div>
                            <span id="result"></span>
                        </div>
                        <div class="form-group">
                            <label for="npwd" class="cpwd">
                                <span class="trn">Confirm Password</span>
                            </label>
                            <input id="txtconpwd" type="password" name="password1" class="form-control input-sm validate[required,equals[txtnewpwd]] text-input pwdinput" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success btn-xs lfooter">
                            <span class="trn">Change Password</span>
                        </button>
                        <a class="btn btn-xs rejectbtn anchrbtn" href="@Url.Action("QFLFeedback", "Home")">
                            <span class="trn">Cancel</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <!--Change Password  Modal -->
    <!--Dynamic Alert  Modal -->
    <div class="modal fade" id="DynamicAlertModal" role="dialog">
        <div class="modal-dialog modal-xs">
            <div class="modal-content">
                <div class="modal-header modalheaderbg">
                    <h4 class="modal-title" id="hTitle3">
                    </h4>
                </div>
                <div class="modal-body">
                    <p id="">
                    </p>
                </div>
                <div class="modal-footer">
                    <button id="dyOk" type="button" class="btn btn-success btn-xs btn-cancel btn-center"
                            data-dismiss="modal">
                        <span class="trn">OK</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!--Dynamic End of Alert modal -->
</body>
</html>
